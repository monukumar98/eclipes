package LiveApr;

import java.util.*;

public class Doubtspat {
	public static void main(String[] args) {
        Scanner scn = new Scanner(System.in);
         int n = scn.nextInt();
         int row = 1;
         int nst = 1;
         int val = 1;
         
         while(row <= n)
         {
             int col = 1;
             while(col <= nst)
             {
                if(col == 1 && col == nst)
                {
                 System.out.print(val);
                }
                else
                {
                    System.out.println("0");
                }
                val = val + 1;
                 col=col + 1;
             }
             nst = nst + 1;
             row =row + 1;
             System.out.println();
         }
    
}
}
