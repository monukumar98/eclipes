package LiveApr;

import java.util.*;
import java.lang.Math;

public class Doubtspat {
	public static void main(String args[]) {
		// Your Code Here
		Scanner sc = new Scanner(System.in);
		int t = sc.nextInt();
		while (t-- > 0) {
			long n = sc.nextLong();
			long k = sc.nextLong();
			int p = (int)(Math.pow(n, 1.0 / k));
			System.out.println(p);
		}
	}
}